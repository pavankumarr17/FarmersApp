<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="2.5dp"
    android:paddingRight="2.5dp"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt0"
        android:text="select_crop"
        android:textSize="20sp"
        android:layout_below="@id/recycler_view"/>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_below="@+id/txt0"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#ffffff"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:id="@+id/lnr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="Symptoms"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/plus"
                        android:layout_width="30dp"
                        android:layout_height="20dp"

                        android:background="@drawable/down"

                        android:clickable="true" />


                    <ImageButton
                        android:id="@+id/minus"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:background="@drawable/up"
                        android:clickable="true"
                        android:visibility="gone" />


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"

                    android:layout_below="@+id/lnr"
                    android:id="@+id/desctxt"/>
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preventive Measures"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnr1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="Cultural Method"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/plus1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:background="@drawable/down"

                        android:clickable="true" />


                    <ImageButton
                        android:id="@+id/minus1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:background="@drawable/up"
                        android:clickable="true"
                        android:visibility="gone" />


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"

                    android:layout_below="@+id/lnr1"
                    android:id="@+id/desctxt1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnr2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="Chemical Method:"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/plus2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:background="@drawable/down"

                        android:clickable="true" />


                    <ImageButton
                        android:id="@+id/minus2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:background="@drawable/up"
                        android:clickable="true"
                        android:visibility="gone" />


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"

                    android:layout_below="@+id/lnr2"
                    android:id="@+id/desctxt2"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnr3"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="Biological Method:"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/plus3"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:background="@drawable/down"

                        android:clickable="true" />


                    <ImageButton
                        android:id="@+id/minus3"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:background="@drawable/up"
                        android:clickable="true"
                        android:visibility="gone" />


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"

                    android:layout_below="@+id/lnr3"
                    android:id="@+id/desctxt3"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>